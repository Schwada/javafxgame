<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<GridPane fx:controller="com.schwada.mpgame.controller.ServerController" xmlns:fx="http://javafx.com/fxml" prefHeight="500.0" prefWidth="1000.0">
    <stylesheets><URL value="@style.css" /></stylesheets>

    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100" maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200" maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <!-- -->
    <Label styleClass="header" text="Server" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="1" />

    <!-- -->
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2" spacing="10">
        <Label styleClass="server-title" text="Running on port:" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="1" />
        <Label styleClass="server-location" fx:id="serverLocationText" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="1" />
    </HBox>

    <!-- -->
    <Button fx:id="quitButton" text="Quit" styleClass="button" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
</GridPane>
